{
  "family": "my-strapi-app",

  "networkMode": "awsvpc",

  "requiresCompatibilities": ["FARGATE"],

  "cpu": "512",

  "memory": "1024",

  "executionRoleArn": "EXECUTION_ROLE_ARN",

  "containerDefinitions": [
    {
      "name": "my-strapi-app",

      "image": "IMAGE_URI",

      "essential": true,

      "portMappings": [
        {
          "containerPort": 1337,
          "hostPort": 1337
        }
      ],

      "environment": [

        { "name": "HOST", "value": "0.0.0.0" },
        { "name": "PORT", "value": "1337" },

        { "name": "DATABASE_CLIENT", "value": "mysql" },

        {
          "name": "DATABASE_HOST",
          "value": "YOUR_RDS_ENDPOINT"
        },

        {
          "name": "DATABASE_PORT",
          "value": "3306"
        },

        {
          "name": "DATABASE_NAME",
          "value": "my_strapi_db"
        },

        {
          "name": "DATABASE_USERNAME",
          "value": "admin"
        },

        {
          "name": "DATABASE_PASSWORD",
          "value": "password"
        },

        { "name": "JWT_SECRET", "value": "productionSecret" },
        { "name": "ADMIN_JWT_SECRET", "value": "productionSecret" },
        { "name": "APP_KEYS", "value": "productionSecret" },
        { "name": "API_TOKEN_SALT", "value": "productionSecret" }

      ]
    }
  ]
}
